    "elastic": {
      "bootstrap": false,
      "node": "http://elasticsearch:9200",
      "maxScroll": 5000,
      "scrollTimeout": "10m",
      "log": "debug",
      "index": "items",
      "indexConfiguration": {
        "mapping": {
          "total_fields": {
            "limit": 2000
          }
        },
        "max_result_window": 100000,
        "highlight": {
          "max_analyzed_offset": 1000000
        }
      },
      "fields": {
        "name.@value": {"label": "Name", "checked": true},
        "description.@value": {"label": "Description", "checked": true},
        "language.name.@value": {"label": "Language", "checked": true},
        "language.alternateName.@value": {"label": "Alternate Language Name", "checked": true},
        "contributor.@value": {"label": "Contributor", "checked": true},
        "creator.@value": {"label": "Creator", "checked": true},
        "place.nameOrTitle.@value": { "label": "Place", "checked": true },
        "placevenue.nameOrTitle.@value": { "label": "Place Venue", "checked": true },
        "_text": {"label": "Text", "checked": true}
      },
      "aggregations": [
        {
          "display": "Collection",
          "order": 0,
          "name": "_root.name.@value",
          "field": "_root.name.@value.keyword",
          "active": true
        },
        {
          "display": "Member Of",
          "order": 1,
          "name": "_memberOf.name.@value",
          "field": "_memberOf.name.@value.keyword"
        },
        {
          "display": "Access",
          "order": 2,
          "name": "license.name.@value",
          "field": "license.name.@value.keyword",
          "help": "The access conditions associated with a resource."
        },
        {
          "display": "License",
          "order": 0,
          "name": "license.@id",
          "field": "license.@id.keyword",
          "hide": true,
          "icons": true
        },
        {
          "display": "Record Type",
          "order": 3,
          "name": "@type",
          "field": "@type.keyword"
        },
        {
          "display": "Language",
          "order": 4,
          "name": "language.name.@value",
          "field": "language.name.@value.keyword"
        },
        {
          "display": "Key Period",
          "order": 5,
          "name": "category.name.@value",
          "field": "category.name.@value.keyword"
        },
        {
          "display": "Modality",
          "order": 6,
          "name": "modality.name.@value",
          "field": "modality.name.@value.keyword",
          "help": "The mode(s) (spoken, written, signed, etc.) used in the interaction represented by this resource.",
          "icons": true
        },
        {
          "display": "Linguistic Genre",
          "order": 7,
          "name": "linguisticGenre.name.@value",
          "field": "linguisticGenre.name.@value.keyword",
          "help": "The linguistic classification of the genre of this resource."
        },
        {
          "display": "File Format",
          "order": 8,
          "name": "encodingFormat.@value",
          "field": "encodingFormat.@value.keyword",
          "help": "The media type of the resource.",
          "icons": true
        },
        {
          "display": "Annotation Type",
          "order": 9,
          "name": "annotationType.@value",
          "field": "annotationType.@value.keyword"
        }
      ],
      "highlightFields": [
        "_text"
      ],
      "test": {
        "filters": {
          "hasFile.language.name": [
            "Arabic, Standard",
            "Chinese, Mandarin",
            "Persian, Iranian",
            "Turkish",
            "Vietnames"
          ]
        },
        "@type": [
          "TextDialogue"
        ]
      },
      "mappingFieldLimit": 3000,
      "mappings": {
        "date_detection": false,
        "properties": {
          "@id": {
            "type": "keyword"
          },
          "hasFile": {
            "type": "nested",
            "properties": {
              "language": {
                "type": "nested",
                "properties": {
                  "name": {
                    "type": "nested",
                    "properties": {
                      "@value": {
                        "type": "keyword"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "admin": {
      "indexRoutes": true
    },
    "conformsTo": {
      "collection": "https://purl.archive.org/language-data-commons/profile#Collection",
      "object": "https://purl.archive.org/language-data-commons/profile#Object",
      "notebook": "https://purl.archive.org/language-data-commons/profile#Notebook"
    },
    "skipByMatch": [
    ]
  }
