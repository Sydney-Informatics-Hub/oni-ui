    "elastic": {
      "bootstrap": false,
      "node": "http://elasticsearch:9200",
      "log": "debug",
      "maxScroll": 5000,
      "scrollTimeout": "10m",
      "index": "items",
      "indexConfiguration": {
        "mapping": {
          "total_fields": {
            "limit": 2000
          }
        },
        "highlight": {
          "max_analyzed_offset": 1000000
        }
      },
      "fields": [
        "@id",
        "name.@value",
        "description.@value",
        "_text",
        "abstract.@value",
        "keywords.name.@value",
        "place.nameOrTitle.@value",
        "placevenue.nameOrTitle.@value"
      ],
      "aggregations": [
        {
          "display": "Collection",
          "order": 0,
          "name": "_root.name.@value",
          "field": "_root.name.@value.keyword"
        },
        {
          "display": "Member Of",
          "order": 1,
          "name": "_memberOf.name.@value",
          "field": "_memberOf.name.@value.keyword"
        },
        {
          "display": "Access",
          "order": 2,
          "name": "license.name.@value",
          "field": "license.name.@value.keyword",
          "sortBy": "frequency"
        },
        {
          "display": "Record Type",
          "order": 3,
          "name": "@type",
          "field": "@type.keyword"
        },
        {
          "display": "Language",
          "order": 4,
          "name": "inLanguage.name.@value",
          "field": "inLanguage.name.@value.keyword"
        },
        {
          "display": "Category",
          "order": 5,
          "name": "category.name.@value",
          "field": "category.name.@value.keyword",
          "sortBy": "name"
        },
        {
          "display": "Current Holder",
          "order": 6,
          "name": "currentHolder.name.@value",
          "field": "currentHolder.name.@value.keyword",
          "help": "The Current Holder."
        },
        {
          "display": "Subject",
          "order": 7,
          "name": "subject.name.@value",
          "field": "subject.name.@value.keyword",
          "help": "The Subject.",
          "sortBy": "name"
        },
        {
          "display": "Country of Origin",
          "order": 8,
          "name": "country.name.@value",
          "field": "country.name.@value.keyword"
        },
        {
          "display": "Publisher",
          "order": 9,
          "name": "publisher.@value",
          "field": "publisher.@value.keyword"
        },
        {
          "display": "Serial number",
          "order": 10,
          "name": "seriesNumber.@value",
          "field": "seriesNumber.@value.keyword"
        },
        {
          "display": "Modality",
          "order": 11,
          "name": "modality.name.@value",
          "field": "modality.name.@value.keyword",
          "help": "The mode(s) (spoken, written, signed, etc.) used in the interaction represented by this resource.",
          "icons": true
        },
        {
          "display": "Linguistic Genre",
          "order": 12,
          "name": "linguisticGenre.name.@value",
          "field": "linguisticGenre.name.@value.keyword",
          "help": "The linguistic classification of the genre of this resource."
        },
        {
          "display": "File Format",
          "order": 13,
          "name": "encodingFormat.@value",
          "field": "encodingFormat.@value.keyword",
          "help": "The media type of the resource.",
          "icons": true
        },
        {
          "display": "Annotation Type",
          "order": 14,
          "name": "annotationType.@value",
          "field": "annotationType.@value.keyword"
        },
        {
          "display": "License",
          "order": 15,
          "name": "license.@id",
          "field": "license.@id.keyword",
          "hide": true,
          "icons": true
        }
      ],
      "highlightFields": ["_text"],
      "test": {
        "filters": {
          "hasFile.inLanguage.name": [
            "Arabic, Standard",
            "Chinese, Mandarin",
            "Persian, Iranian",
            "Turkish",
            "Vietnames"
          ]
        },
        "@type": ["TextDialogue"]
      },
      "mappingFieldLimit": 3000,
      "mappings": {
        "date_detection": false,
        "properties": {
          "@id": {
            "type": "keyword"
          },
          "hasFile": {
            "type": "nested",
            "properties": {
              "language": {
                "type": "nested",
                "properties": {
                  "name": {
                    "type": "nested",
                    "properties": {
                      "@value": {
                        "type": "keyword"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "admin": {
      "indexRoutes": true
    },
    "conformsTo": {
      "collection": "https://purl.archive.org/language-data-commons/profile#Collection",
      "object": "https://purl.archive.org/language-data-commons/profile#Object",
      "notebook": "https://purl.archive.org/language-data-commons/profile#Notebook"
    },
    "skipByMatch": []
  }
}
